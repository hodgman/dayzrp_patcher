			<RowDefinition Height="25*" />
			<RowDefinition Height="240*" />
			<RowDefinition Height="153*" />
		</Grid.RowDefinitions>
		<GroupBox Header="Prototype Variables" Margin="12,4,12,65" Name="groupBox1" Grid.RowSpan="2">
			<Grid>
				<TextBox Height="29" Margin="6,6,105,0" Name="m_urlBox" VerticalAlignment="Top">http://localhost/test/</TextBox>
				<Label Height="30" Margin="0,6,21,0" Name="label1" VerticalAlignment="Top" HorizontalAlignment="Right" Width="78">Patch Server</Label>
				<Button Margin="6,0,6,6" Name="m_btnBegin" Height="25" VerticalAlignment="Bottom" Click="Begin_Click">On Application Begin</Button>
				<TextBox Margin="6,40,105,0" Name="m_installPathBox" Height="29" VerticalAlignment="Top">D:\patchtest</TextBox>
				<Label Margin="0,40,13,0" Name="label2" HorizontalAlignment="Right" Width="86" Height="32.04" VerticalAlignment="Top">Install Dir</Label>
				<TextBox Margin="6,109,105,0" Name="m_a2oaBox" Height="28.04" VerticalAlignment="Top">G:\Steam\SteamApps\common\Arma 2 Operation Arrowheadasdfasdfasd</TextBox>
				<Label Margin="0,109.04,6,0" Name="label3" HorizontalAlignment="Right" Width="93" Height="31" VerticalAlignment="Top">A2:OA Dir</Label>
				<TextBox Margin="6,75,105,0" Name="m_a2Box" Height="28.04" VerticalAlignment="Top">G:\Steam\SteamApps\common\Arma 2asdfasdfasdf</TextBox>
				<Label HorizontalAlignment="Right" Margin="0,75,6,70" Name="label4" Width="93">A2 Dir</Label>
			</Grid>
		</GroupBox>
		<ListBox Margin="12,181,12,149" Name="display" Grid.RowSpan="2" Grid.Row="1" />
		<ProgressBar Height="18" Margin="12,0,12,37" Name="Progress2" VerticalAlignment="Bottom" Grid.Row="2" />
		<ProgressBar Margin="12,74,12,61" Name="Progress1" Grid.Row="2" />
		<Button Height="25" Margin="169,43,0,0" Name="m_btnLaunch" VerticalAlignment="Top" Click="Launch_Click" IsEnabled="False" HorizontalAlignment="Left" Width="86" Grid.Row="2">Launch</Button>
		<Label Height="29" Margin="12,0,12,7" Name="m_taskStatus" VerticalAlignment="Bottom" Grid.Row="2"></Label>
		<Button Height="25" Margin="0,43,174,0" Name="m_btnRetry" VerticalAlignment="Top" IsEnabled="False" Click="Retry_Click" HorizontalAlignment="Right" Width="75" Grid.Row="2">Retry</Button>
		<TextBlock Height="23" Margin="16,14,12,0" Name="m_serverStatus" VerticalAlignment="Top" Grid.Row="2" />
	</Grid>
</Window>
