			<Grid>
				<TextBox Height="29" HorizontalAlignment="Left" Margin="6,6,0,0" Name="m_urlBox" VerticalAlignment="Top" Width="168">http://localhost/test/</TextBox>
				<Label Height="30" Margin="184,5,0,0" Name="label1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="78">Patch Server</Label>
				<Button Margin="12,0,0,18" Name="Begin" Height="25" VerticalAlignment="Bottom" Click="Begin_Click" HorizontalAlignment="Left" Width="75">Begin</Button>
