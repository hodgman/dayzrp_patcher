		<ProgressBar Height="18" Margin="12,0,12,61" Name="Progress1" VerticalAlignment="Bottom" />
		<Button Height="25" Margin="253,0,257,85" Name="m_btnLaunch" VerticalAlignment="Bottom" Click="Launch_Click" IsEnabled="False">Launch</Button>
		<Label Height="29" Margin="12,0,12,7" Name="m_taskStatus" VerticalAlignment="Bottom"></Label>
	</Grid>
</Window>
